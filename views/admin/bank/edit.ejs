<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Edit Bank</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Beranda</a></li>
              <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
              <li class="breadcrumb-item active">Edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12 col-md-6">
               <!-- general form elements -->
               <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Edit "<%= data.name %>"</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/bank/edit/<%= data._id %>?_method=PUT" method="POST">
                    <div class="card-body">
                        <div class="form-group mb-0">
                          <label for="name">Nama Pemilik</label>
                          <input
                            type="text"
                            class="form-control"
                            name="name"
                            id="name"
                            placeholder="edit nama pemilik"
                            value="<%= data.name  %>"
                            required
                          />
                        </div>
                        <div class="form-group mb-0">
                            <label for="nameBank">Nama Bank</label>
                            <input
                              type="text"
                              class="form-control"
                              name="nameBank"
                              id="nameBank"
                              placeholder="edit nama bank"
                              value="<%= data.nameBank  %>"
                              required
                            />
                          </div>
                          <div class="form-group mb-0">
                            <label for="noRekening">Nomor Rekening</label>
                            <input
                              type="number"
                              class="form-control"
                              name="noRekening"
                              id="noRekening"
                              placeholder="edit nomor Rekening"
                              value="<%= data.noRekening  %>"
                              required
                            />
                          </div>
                      </div>
                  <!-- /.card-body -->
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
              <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('../../partials/footer.ejs') %> <%- include('../../partials/js.ejs') %>