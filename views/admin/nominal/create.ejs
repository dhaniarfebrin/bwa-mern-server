<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Beranda</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12 col-md-6">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Tambah Nominal</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/nominal/create" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label>Nama Koin</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="coinName"
                    required
                  >
                    <option selected="selected" value="Gold">Gold</option>
                    <option value="Diamond">Diamond</option>
                    <option value="Jewel">Jewel</option>
                  </select>
                </div>
                <div class="form-group mb-0">
                  <label for="coinQuantity">Jumlah Koin</label>
                  <input
                    type="number"
                    class="form-control"
                    name="coinQuantity"
                    id="coinQuantity"
                    placeholder="Masukkan jumlah koin"
                    required
                  />
                </div>
                <div class="form-group mb-0">
                  <label for="price">Harga</label>
                  <input
                    type="number"
                    class="form-control"
                    name="price"
                    id="price"
                    placeholder="harganya"
                    required
                  />
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer d-flex">
                <button type="submit" class="ml-auto btn btn-primary">
                  Simpan
                </button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

