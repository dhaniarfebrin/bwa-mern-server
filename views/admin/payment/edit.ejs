<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Jenis Pembayaran</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Beranda</a></li>
            <li class="breadcrumb-item"><a href="/payment">Jenis Pembayaran</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12 col-md-6">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Ubah Jenis Pembayaran</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/payment/edit/<%= dataPayment._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                    <label for="type">Tipe</label>
                    <input
                      type="text"
                      class="form-control"
                      name="type"
                      id="type"
                      placeholder="Masukkan tipe pembayaran"
                      value="<%= dataPayment.type %> "
                      required
                    />
                </div>
                <div class="form-group">
                    <label>Pilih Bank</label>
                    <div class="select2-purple">
                    <select
                        class="form-control select2"
                        style="width: 100%"
                        multiple="multiple"
                        data-placeholder="Pilih bank"
                        name="banks"
                        required
                    >
                    <% dataBank.forEach( bank => { %>
                        <option value="<%= bank._id %>"
                            <% dataPayment.banks.forEach(paymentBank => { %>
                                <%if (bank._id.toString() === paymentBank._id.toString()) { %>
                                    selected
                                <% } %> 
                            <% }) %> 
                        >
                        <%= bank.name  %>  - <%= bank.nameBank %> - <%= bank.noRekening %>
                    </option>
                    <% }) %>
                    </select>
                    </div>
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer d-flex">
                <button type="submit" class="ml-auto btn btn-primary">
                  Simpan
                </button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('../../partials/footer.ejs') %> <%- include('../../partials/js.ejs') %>

